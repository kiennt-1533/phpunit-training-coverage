<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false">
    <testsuites>
        <testsuite name="C0">
            <directory suffix="Test.php">./tests/C0</directory>
        </testsuite>
        <testsuite name="C1">
            <directory suffix="Test.php">./tests/C1</directory>
        </testsuite>
        <testsuite name="C2">
            <directory suffix="Test.php">./tests/C2</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist processUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">./src</directory>
        </whitelist>
    </filter>
</phpunit>
